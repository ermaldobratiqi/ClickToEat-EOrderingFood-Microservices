
@model IEnumerable<ProductDto>

<style>
    body {
        background-color: darkslategray;
    }

    .searchDiv {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .searchForm {
        background-color: cadetblue;
        width: 300px;
        height: 44px;
        border-radius: 5px;
        display: flex;
        flex-direction: row;
        align-items: center;
    }

    .searchInput {
        all: unset;
        font: 16px system-ui;
        color: #fff;
        height: 100%;
        width: 100%;
        padding: 6px 10px;
    }

    ::placeholder {
        color: #fff;
        opacity: 0.7;
    }

    .searchButton {
        all: unset;
        cursor: pointer;
        width: 44px;
        height: 44px;
    }

    .searchSvg {
        color: #fff;
        fill: currentColor;
        width: 45px;
        height: 45px;
        padding: 10px;
    }
</style>

